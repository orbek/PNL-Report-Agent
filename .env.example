# ============================================================================
# Financial P&L Anomaly Detection Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# ============================================================================

# ========================================================================
# REQUIRED: OpenAI API Configuration
# ========================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ========================================================================
# Model Selection (choose one)
# ========================================================================
DEFAULT_MODEL=gpt-4  # Options: gpt-4, gpt-4-turbo, gpt-4o, gpt-4o-mini, gpt-5

# ========================================================================
# LangChain/LangSmith Configuration (Optional - for tracing)
# ========================================================================
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=Financial-Anomaly-Agent

# ========================================================================
# Database Configuration
# ========================================================================
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
DATABASE_PATH=./financial_agent.db
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname  # For PostgreSQL

# ========================================================================
# Vector Store Configuration
# ========================================================================
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=gl_account_knowledge
EMBEDDING_MODEL=text-embedding-3-large

# ========================================================================
# Anomaly Detection Parameters
# ========================================================================
ANOMALY_THRESHOLD_HIGH=30.0
ANOMALY_THRESHOLD_MEDIUM=15.0
ANOMALY_MIN_ABSOLUTE_CHANGE=10000.00
STATISTICAL_OUTLIER_ZSCORE=2.0

# ========================================================================
# Performance & Security
# ========================================================================
ENVIRONMENT=development  # Options: development, production
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
ENABLE_AUDIT_LOG=true
MASK_SENSITIVE_DATA=false  # Set to true in production
MAX_CONCURRENT_LLM_CALLS=5
CACHE_TTL=3600

# ========================================================================
# Optional: External APIs (leave blank if not using)
# ========================================================================
TAVILY_API_KEY=
EXA_API_KEY=
SERPAPI_API_KEY=
ZEP_API_KEY=
ZEP_API_URL=https://api.getzep.com

# ========================================================================
# GPT-5 Specific Configuration (if using GPT-5)
# ========================================================================
GPT5_REASONING_INGESTION=low
GPT5_REASONING_DETECTION=medium
GPT5_REASONING_RETRIEVAL=low
GPT5_REASONING_REPORTING=high
GPT5_TEMP_STRUCTURED=0.0
GPT5_TEMP_CREATIVE=0.3
